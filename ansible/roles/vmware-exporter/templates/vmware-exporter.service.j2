[Unit]
Description=vmware-exporter allows you to get vmware metric using prometheus
Wants=network-online.target
After=network-online.target

[Service]
User=prometheus
Group=prometheus
Type=simple
CapabilityBoundingSet=CAP_NET_RAW
AmbientCapabilities=CAP_NET_RAW
ExecStart=/usr/local/bin/vmware_exporter -c /etc/vmware_exporter/config.yml

[Install]
WantedBy=multi-user.target