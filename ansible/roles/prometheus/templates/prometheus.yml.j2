global:
  scrape_interval: 30s
  evaluation_interval: 30s


scrape_configs:
  - job_name: fping
    scrape_interval: 5s
    metrics_path: /probe
    static_configs:
    file_sd_configs:
    - files:
      - fping/*.json
    relabel_configs:
    - source_labels: [__address__]
      target_label: __param_target
    - source_labels: [__param_target]
      target_label: instance
    - target_label: __address__
      replacement: {{ inventory_hostname }}:9605

  - job_name: 'vmware_vcenter'
    metrics_path: '/metrics'
    static_configs:
      - targets:
        - 'vsphere.unicornafk.fr'
    relabel_configs:
      - source_labels: [__address__]
        target_label: __param_target
      - source_labels: [__param_target]
        target_label: instance
      - target_label: __address__
        replacement: {{ inventory_hostname }}:9272

  - job_name: 'blackbox'
    metrics_path: /probe
    params:
      module: [http_2xx]
    file_sd_configs:
    - files:
      - blackbox/*.json
    relabel_configs:
      - source_labels: [__address__]
        target_label: __param_target
      - source_labels: [__param_target]
        target_label: instance
      - target_label: __address__
        replacement: {{ inventory_hostname }}:9115

  - job_name: 'snmp'
    static_configs:
    file_sd_configs:
    - files:
      - snmp-exporter/*.json
    metrics_path: /snmp
    params:
      module: [if_mib]
    relabel_configs:
      - source_labels: [__address__]
        target_label: __param_target
      - source_labels: [__param_target]
        target_label: instance
      - target_label: __address__
        replacement: {{ inventory_hostname }}:9116

  - job_name: wireguard
    static_configs:
      - targets:
{% for vpn in groups[prometheus_vpn_group] %}
        - '{{ vpn }}:9586'
{% endfor %}

  - job_name: kea-dhcp
    static_configs:
      - targets:
{% for vpn in groups[prometheus_dhcp_group] %}
        - '{{ vpn }}:9547'
{% endfor %}