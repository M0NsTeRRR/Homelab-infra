global:
  scrape_interval: 30s
  evaluation_interval: 30s

alerting:
  alertmanagers:
  - static_configs:
    - targets:
      - localhost:9093
    scheme: http
    timeout: 10s

rule_files:
  - /etc/alertmanager/rules/*

scrape_configs:
  - job_name: consul
    consul_sd_configs:
      {% for consul in prometheus_consul.servers %}
      - server: {{ consul.server }}
        datacenter: {{ consul.datacenter }}
        scheme: https
        tls_config:
          ca_file: /etc/consul.d/ssl/ca.crt
          cert_file: /etc/consul.d/ssl/{{ inventory_hostname }}.crt
          key_file: /etc/consul.d/ssl/{{ inventory_hostname }}.pem
      {% endfor %}
    scheme: https
      tls_config:
        ca_file: /etc/prometheus/ssl/ca.crt
        cert_file: /etc/prometheus/ssl/client.crt
        key_file: /etc/prometheus/ssl/client.crt
    tags:
      - monitoring
    relabel_configs:
      - source_labels: [__meta_consul_service]
        target_label: job
      - source_labels: [__meta_consul_service]
        target_label: __scheme__
        replacement: https

  - job_name: blackbox_http
    metrics_path: /proxy
    params:
      module:
        - blackbox
        - http_2xx
    scheme: https
    tls_config:
      ca_file: /etc/prometheus/ssl/ca.crt
      cert_file: /etc/prometheus/ssl/client.crt
      key_file: /etc/prometheus/ssl/client.pem
    file_sd_configs:
    - files:
      - blackbox_http/targets.json
    relabel_configs:
      - source_labels: [__address__]
        target_label: __param_target
      - source_labels: [__param_target]
        target_label: instance
      - target_label: __address__
        replacement: {{ inventory_hostname }}:9998

