global:
  scrape_interval: 30s
  evaluation_interval: 30s

alerting:
  alertmanagers:
  - static_configs:
    - targets:
      - localhost:9093
    scheme: http
    timeout: 10s

rule_files:
  - /etc/alertmanager/rules/*

scrape_configs:
  - job_name: fping
    scrape_interval: 5s
    metrics_path: /proxy
    params:
      module:
        - fping
    scheme: https
    tls_config:
      cert_file: /etc/prometheus/certs/monitoring-exporter/client.crt
      key_file: /etc/prometheus/certs/monitoring-exporter/client.pem
      insecure_skip_verify: true
    file_sd_configs:
    - files:
      - fping/targets.json
    relabel_configs:
    - source_labels: [__address__]
      target_label: __param_target
    - source_labels: [__param_target]
      target_label: instance
    - target_label: __address__
      replacement: {{ ansible_fqdn }}:9998

