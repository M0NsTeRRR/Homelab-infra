[Unit]
Description=Alertmanager allows you to get notifications with prometheus
After=network-online.target

[Service]
User=prometheus
Group=prometheus
Type=simple
WorkingDirectory=/etc/alertmanager
ExecStart=/usr/local/bin/alertmanager --config.file=alertmanager.yml --storage.path /var/lib/alertmanager/
RestartSec=10
Restart=always

[Install]
WantedBy=multi-user.target