[Unit]
Description=vmware-exporter allows you to get vmware metric using prometheus
Wants=network-online.target
After=network-online.target

[Service]
User=prometheus
Group=prometheus
Type=simple
CapabilityBoundingSet=CAP_NET_RAW
AmbientCapabilities=CAP_NET_RAW
Environment=REQUESTS_CA_BUNDLE=/etc/ssl/certs/ca-certificates.crt
ExecStart=/opt/vmware_exporter/venv/bin/vmware_exporter -a 127.0.0.1 -c /etc/vmware_exporter/config.yml

[Install]
WantedBy=multi-user.target