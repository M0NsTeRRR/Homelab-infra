{    
    "Dhcp6": {
        "hooks-libraries": [
            {
                "library": "/usr/lib/{{ ansible_architecture }}-linux-gnu/kea/hooks/libdhcp_lease_cmds.so",
                "parameters": { }
            },
            {
                "library": "/usr/lib/{{ ansible_architecture }}-linux-gnu/kea/hooks/libdhcp_ha.so",
                "parameters": {
                    "high-availability": [{
                        "this-server-name": "{{ inventory_hostname }}",
                        "mode": "hot-standby",
                        "heartbeat-delay": 10000,
                        "max-response-delay": 10000,
                        "max-ack-delay": 5000,
                        "max-unacked-clients": 5,
                        "peers": [
                            {% for host in ansible_play_hosts %}{
                                "name": "{{ host }}",
                                "url": "https://[{{ lookup('dig', host, 'qtype=AAAA' )}}]/",
                                "role": "{% if host == ansible_play_hosts[0] %}primary{% elif host == ansible_play_hosts[1] %}standby{% else %}backup{% endif %}",
                                "auto-failover": true
                            }{% if not loop.last %},{% endif %}
                            {% endfor %}
                        ]
                    }]
                }
            }
        ],
        "interfaces-config": {
            "interfaces": [ {% for interface in ansible_interfaces %}"{{ interface }}"{% if not loop.last %},{% endif %}{% endfor %} ]
        },
        "control-socket": {
            "socket-type": "unix",
            "socket-name": "/tmp/kea-dhcp6-ctrl.sock"
        },
        "lease-database": {
            "type": "memfile",
            "lfc-interval": 3600
        },
        "expired-leases-processing": {
            "reclaim-timer-wait-time": 10,
            "flush-reclaimed-timer-wait-time": 25,
            "hold-reclaimed-time": 3600,
            "max-reclaim-leases": 100,
            "max-reclaim-time": 250,
            "unwarned-reclaim-cycles": 5
        },
        "renew-timer": 1000,
        "rebind-timer": 2000,
        "preferred-lifetime": 3000,
        "valid-lifetime": 4000,
        "option-data": [
            {
                "name": "dns-servers",
                "data": "{% for host in groups['dns'] %}{{ hostvars[host].ipv6 }}{% if not loop.last %},{% endif %}{% endfor %}"
            },
            {
                "name": "domain-search",
                "data": "{{ domains|join(',') }}"
            }
        ],
        "subnet6": [
            {% for subnet in ipv6_subnets %}{
                "subnet": "{{ subnet.subnet }}",
                "pools": [
                    {% for pool in subnet.pools %}{ 
                        "pool": "{{ pool.start }} - {{ pool.end }}" 
                    }{% if not loop.last %},{% endif %}
                    {% endfor %} 
                ],
                "reservations": [
                    {% for reservation in subnet.reservations %}{
                        "hw-address": "{{ reservation.hw_address }}",
                        "ip-addresses": [ "{{ reservation.ip_address }}" ],
                        "hostname": "{{ reservation.hostname }}"
                    }{% if not loop.last %},{% endif %}
                    {% endfor %}
                ]
            }{% if not loop.last %},{% endif %}
            {% endfor %}
        ],
        "loggers": [
        {
            "name": "kea-dhcp6",
            "output_options": [
                {
                    "output": "/var/log/kea/kea-dhcp6.log",
                    "pattern": {% raw %}"%D{%Y-%m-%d %H:%M:%S.%q} %-5p [%c/%i] %m\n",{% endraw %}
                    "flush": false,
                    "maxsize": 1048576,
                    "maxver": 8
                }
            ],
            "severity": "INFO",
            "debuglevel": 0
        }
      ]
    }
}