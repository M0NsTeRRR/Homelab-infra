{
  "variables": {
    "host_ip": "",
    "http_port": "8888",
    "version": "",
    "vcenter_server": "",
    "username": "",
    "password": ""
  },
  "sensitive-variables": ["password"],
  "builders": [
    {
      "type": "vsphere-iso",
      "vcenter_server": "{{ user `vcenter_server` }}",
      "insecure_connection": true,
      "username": "{{ user `username` }}",
      "password": "{{ user `password` }}",
      "datacenter": "Homelab",

      
      "vm_name": "packer-debian",
      "cluster": "HA", "host": "server3.unicornafk.fr",
      "datastore": "SERVER3-RAID1",
      "vm_version": 13,
      "guest_os_type": "debian10_64Guest",
      "convert_to_template": "true",
      
      "CPUs": 1,
      "cpu_cores": 1,
      "RAM": 1024,
      "disk_controller_type": "pvscsi",
      "storage": [
        {
          "disk_size": 10000,
          "disk_thin_provisioned": true
        }
      ],
      "network_adapters": [
        {
          "network": "LAB",
          "network_card": "vmxnet3"
        }
      ],
      "notes": "debian-{{ user `version` }}, generated on {{ isotime \"2006-01-02T15:04:05Z\" }}",

      "iso_paths": ["[NAS] ISO/debian-{{ user `version` }}-amd64-netinst.iso"],
      "http_directory":"preseed",
      "http_port_min": "{{ user `http_port` }}",
      "http_port_max": "{{ user `http_port` }}",
      "http_bind_address": "127.0.0.1",
      "boot_wait": "10s",
      "boot_command": [
        "<esc><wait>",
        "auto url=http://{{ user `host_ip` }}:{{ .HTTPPort }}/debian.cfg",
        "<enter>"
      ],

      "ssh_username": "ludovic",
      "ssh_password": "ludovic",
      "ssh_timeout": "30m"
    }
  ],
  "provisioners": [
    {
      "type": "ansible",
      "playbook_file": "scripts/main.yml",
      "ansible_env_vars": [ "ANSIBLE_HOST_KEY_CHECKING=False", "ANSIBLE_PYTHON_INTERPRETER=/usr/bin/python3" ]
    }
  ]
}