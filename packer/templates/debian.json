{
  "variables": {
    "host_ip": "",
    "http_port": "8888",
    "version": "10.6.0",
    "vcenter_server": "",
    "vcenter_username": "",
    "vcenter_password": "",
    "ssh_username": "",
    "ssh_password": ""
  },
  "sensitive-variables": ["vcenter_password"],
  "builders": [
    {
      "type": "vsphere-iso",
      "vcenter_server": "{{ user `vcenter_server` }}",
      "insecure_connection": true,
      "username": "{{ user `vcenter_username` }}",
      "password": "{{ user `vcenter_password` }}",
      "datacenter": "Homelab",

      
      "vm_name": "packer-debian",
      "cluster": "HA",
      "host": "server3.unicornafk.fr",
      "datastore": "SERVER3-RAID1",
      "vm_version": 14,
      "guest_os_type": "ubuntu64Guest",
      "convert_to_template": "true",
      
      "CPUs": 1,
      "cpu_cores": 1,
      "RAM": 1024,
      "disk_controller_type": "pvscsi",
      "storage": [
        {
          "disk_size": 10000,
          "disk_thin_provisioned": true
        }
      ],
      "network_adapters": [
        {
          "network": "LAB",
          "network_card": "vmxnet3"
        }
      ],
      "notes": "debian-{{ user `version` }}, generated on {{ isotime \"2006-01-02T15:04:05Z\" }}",

      "iso_url": "https://cdimage.debian.org/debian-cd/current/amd64/iso-cd/debian-{{ user `version` }}-amd64-netinst.iso",
      "iso_checksum": "file:https://cdimage.debian.org/debian-cd/current/amd64/iso-cd/SHA512SUMS",

      "http_directory":"preseed",
      "http_port_min": "{{ user `http_port` }}",
      "http_port_max": "{{ user `http_port` }}",
      "http_bind_address": "0.0.0.0",
      "boot_wait": "10s",
      "boot_command": [
        "<esc><wait>",
        "auto url=http://{{ user `host_ip` }}:{{ .HTTPPort }}/debian.cfg",
        "<enter>"
      ],

      "ssh_username": "{{ user `ssh_username` }}",
      "ssh_password": "{{ user `ssh_password` }}",
      "ssh_timeout": "30m"
    }
  ],
  "provisioners": [
    {
      "type": "ansible",
      "playbook_file": "scripts/main.yml",
      "ansible_env_vars": [ 
        "ANSIBLE_HOST_KEY_CHECKING=False", 
        "ANSIBLE_PYTHON_INTERPRETER=/usr/bin/python3" ,
        "ANSIBLE_USER={{ user `ssh_username` }}",
        "ANSIBLE_SSH_PASS={{ user `ssh_password` }}",
        "ANSIBLE_BECOME_PASSWORD={{ user `ssh_password` }}"
      ]
    }
  ]
}