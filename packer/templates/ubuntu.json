{
  "variables": {
    "host_ip": "",
    "version": "",
    "vcenter_server": "",
    "username": "",
    "password": ""
  },
  "sensitive-variables": ["password"],
  "builders": [
    {
      "type": "vsphere-iso",
      "vcenter_server": "{{ user `vcenter_server` }}",
      "insecure_connection": true,
      "username": "{{ user `username` }}",
      "password": "{{ user `password` }}",
      "datacenter": "Homelab",

      
      "vm_name": "packer-ubuntu",
      "cluster": "HA", "host": "192.168.40.13",
      "datastore": "RAID1",
      "vm_version": 13,
      "guest_os_type": "ubuntu64Guest",

      
      "CPUs": 1,
      "cpu_cores": 1,
      "RAM": 1024,
      "disk_controller_type": "pvscsi",
      "disk_size": 10000,
      "disk_thin_provisioned": true,
      "network": "LAB",
      "network_card": "vmxnet3",
      "notes": "ubuntu-{{ user `version` }}, generated on {{ isotime \"2006-01-02T15:04:05Z\" }}",

      "iso_paths": ["[NAS] ISO/ubuntu-{{ user `version` }}-server-amd64.iso"],
      "http_directory":"preseed",
      "boot_wait": "10s",
      "boot_command": [
        "<esc><wait>",
        "<esc><wait>",
        "<enter><wait>",
        "/install/vmlinuz initrd=/install/initrd.gz",
        " auto=true priority=critical",
        " url=http://{{ user `host_ip` }}:{{ .HTTPPort }}/ubuntu.cfg",
        "<enter>"
      ],

      "ssh_username": "ludovic",
      "ssh_password": "ludovic",
      "ssh_timeout": "30m"
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "execute_command": "echo 'ludovic' | sudo -S sh -c '{{ .Vars }} {{ .Path }}'",
      "script": "scripts/apt-cache.sh"
    },
    {
      "type": "shell",
      "execute_command": "echo 'ludovic' | sudo -S sh -c '{{ .Vars }} {{ .Path }}'",
      "script": "scripts/dns.sh"
    },
    {
      "type": "shell",
      "execute_command": "echo 'ludovic' | sudo -S sh -c '{{ .Vars }} {{ .Path }}'",
      "script": "scripts/snmp.sh"
    },
    {
      "type": "shell",
      "execute_command": "echo 'ludovic' | sudo -S sh -c '{{ .Vars }} {{ .Path }}'",
      "script": "scripts/ntp.sh"
    }
  ]
}