{
  "variables": {
    "host_ip": "",
    "version": "",
    "proxmox_url": "",
    "proxmox_username": "root@pam",
    "proxmox_password": "",
    "proxmox_node": ""
  },
  "sensitive-variables": ["proxmox_password"],
  "builders": [
    {
      "type": "proxmox",
      "proxmox_url": "{{ user `proxmox_url` }}",
      "insecure_skip_tls_verify": true,
      "username": "{{ user `proxmox_username` }}",
      "password": "{{ user `proxmox_password` }}",

      "node": "{{ user `proxmox_node` }}",
      "network_adapters": [
        {
          "model": "virtio",
          "bridge": "vmbr0",
          "vlan_tag": "20"
        }
      ],
      "disks": [
        {
          "type": "scsi",
          "disk_size": "10G",
          "storage_pool": "local-lvm",
          "storage_pool_type": "lvm"
        }
      ],
      "memory": 1024,

      "iso_file": "local:iso/debian-{{ user `version` }}-amd64.iso",
      "http_directory":"preseed",
      "boot_wait": "10s",
      "boot_command": [
        "<esc><wait>",
        "auto url=http://{{ user `host_ip` }}:{{ .HTTPPort }}/debian-{{ split (user `version`) \".\" 0 }}.cfg",
        "<enter>"
      ],

      "ssh_username": "ludovic",
      "ssh_password": "ludovic",
      "ssh_timeout": "15m",

      "unmount_iso": true,

      "template_name": "debian-{{ user `version` }}",
      "template_description": "debian-{{ user `version` }}, generated on {{ isotime \"2006-01-02T15:04:05Z\" }}"
    }
  ]
}